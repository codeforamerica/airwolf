<%= form_for @instruction, url: program_instruction_path, :html => { :class => 'form-horizontal span8' } do |f| %>
  <% if @instruction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@instruction.errors.count, "error") %> prohibited this instruction from being saved:</h2>

      <ul>
      <% @instruction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class=>'span5' %>
      </div>
    </div>
  </div>
  <div class="field">
    <div class="control-group">
      <%= f.fields_for :steps do |builder| %>
        <%= builder.label :name, "Name of step", :class => 'control-label' %>
        <div class="controls">
          <%= builder.text_field :name, :placeholder => "Apply, Call, etc." %>
        </div>
        <%= builder.label :description, "Description of step", :class => 'control-label' %>
        <div class="controls">
          <%= builder.text_area :description, :rows=>5, :placeholder => "What do I do in this step?" %>
        </div>
        <%= builder.label :docs, "Documentation needed for this step", :class => 'control-label' %>
        <div class="controls">
          <%= builder.text_area :docs, :rows=>5, :placeholder => "What do I need to bring at this step?" %>
        </div>
      <% end %>

  </div>
  <div class="field">
    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :class=>'span6', :rows=>4 %>
      </div>
    </div>
  </div>
  <%= f.collection_select :program_id, Program.all, :id, :name, :prompt => true %>
  <div class="field">
    <div class="control-group">
      <%= f.label :documents, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :documents, :class=>'span6', :rows=>3, :placeholder => "List all documents needed for this step" %>
      </div>
    </div>
  </div>
  <!-- <div class="actions"> -->
    <span class="span3 offset5"><%= f.submit :class => 'btn btn-primary' %></span>
  <!-- </div> -->
<% end %>
